@using WebShop_Domain.VwModel;
@model Orders_Vm

<h1>Create Orders</h1>

<form class="w-50 text-center m-auto mt-5" method="post">
    <div class="row">
        <label asp-for="OrderDate">Датум на нарачка</label>
        <input type="date" asp-for="OrderDate" />

        <label asp-for="ShipVia">Достава преку</label>
        <input type="text" asp-for="ShipVia" />

        <label asp-for="ShipCountry">Држава на достава</label>
        <input type="text" asp-for="ShipCountry" />

        <label asp-for="ShipCity">Град на достава</label>
        <input type="text" asp-for="ShipCity" />

        <label asp-for="ShipAddress">Адреса на достава</label>
        <input type="text" asp-for="ShipAddress" />

        <label asp-for="ShipName">Име на достава</label>
        <input type="text" asp-for="ShipName" />

        <label asp-for="ShipRegion">Регион на достава</label>
        <input type="text" asp-for="ShipRegion" />

        @*Можност да се селектираат повеќе Проекти, CTRL + Button Click on Projects*@
        <select asp-for="ProjectIds" asp-items="@ViewBag.getAllProducts" class="mt-3" multiple="multiple">
            <option>--Избери Проекти--</option>
        </select>

        <label asp-for="Freight">Товарено?</label>
        <input type="checkbox" asp-for="Freight" />

        <div class="d-flex justify-content-between mt-4">
            <a class="btn btn-danger" asp-controller="Category" asp-action="Index">Назад</a>
            <input type="submit" class="btn btn-success" value="Зачувај" />
        </div>
    </div>
</form>